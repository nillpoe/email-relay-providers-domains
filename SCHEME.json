{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "homepage": {
                "type": "string",
                "format": "uri"
            },
            "pricing": {
                "type": "string",
                "enum": [
                    "FREE",
                    "FREEMIUM",
                    "PREMIUM"
                ]
            },
            "domains": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "domain": {
                            "type": "string"
                        },
                        "mxRecords": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "priority": {
                                        "type": "integer"
                                    },
                                    "hostname": {
                                        "type": "string"
                                    }
                                },
                                "required": ["priority", "hostname"]
                            }
                        }
                    },
                    "required": ["domain", "mxRecords"]
                }
            }
        },
        "required": ["name", "homepage", "pricing", "domains"]
    }
}